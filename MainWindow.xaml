<Window x:Class="fileReadExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fileReadExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" FontSize="24">
    <StackPanel>
        <Button x:Name="btnReadFile" Click="btnReadFile_Click">
            Read File
        </Button>
        <Button x:Name="btnReadFile2" Click="btnReadFile2_Click">
            Read a comma-separated list
        </Button>
        <Label x:Name="lblOutput"></Label>
    </StackPanel>
</Window>
